[Unit]
Description=Emergent Flask App
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/chemin/vers/emergent
EnvironmentFile=/chemin/vers/emergent/.env
ExecStart=/chemin/vers/emergent/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 main:app
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=emergent

[Install]
WantedBy=multi-user.target